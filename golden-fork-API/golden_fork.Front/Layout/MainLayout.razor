@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using golden_fork.Front.Services
@using golden_fork.Front.Shared
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject CartService CartService
@inject HttpClient Http 
@inject AuthenticationStateProvider AuthStateProvider

<div class="min-h-screen bg-base-200">
    <!-- Top Navbar -->
    <div class="navbar bg-base-100 shadow-lg fixed top-0 z-50">
        <div class="flex-1">
            <a href="/" class="btn btn-ghost normal-case text-2xl text-orange-600">Golden Fork</a>
        </div>
        <div class="flex-none gap-2">
            <a href="/menu" class="btn btn-ghost">Menus</a>
            <a href="/categories" class="btn btn-ghost">Categories</a>
            <a href="/items" class="btn btn-ghost">Items</a>
            <a href="/profile" class="btn btn-ghost">Profile</a>

            <div class="flex-none">
                <button class="btn btn-ghost btn-circle relative" @onclick="ToggleCart">
                    @if (CartService.GetTotalItemsCount() > 0)
                    {
                        <div class="absolute -top-1 -left-1 badge badge-primary badge-sm" style="margin-bottom: -20px">
                            @CartService.GetTotalItemsCount()
                        </div>
                    }
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </button>
            </div>
            <button @onclick="Logout" class="btn btn-error">Logout</button>
        </div>
    </div>

    <!-- Cart Panel (Added here) -->
    @if (showCart)
    {
        <CartPanel IsVisible="showCart" IsVisibleChanged="OnCartVisibilityChanged" />
    }

    <div class="drawer lg:drawer-open mt-16">
        <input id="admin-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content">
            <!-- Main content -->
            <div class="p-4">
                @Body
            </div>
        </div>

        <!-- Admin Sidebar (only visible to Admin) -->
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="drawer-side">
                    <label for="admin-drawer" class="drawer-overlay"></label>
                    <div class="menu p-4 w-80 min-h-full bg-base-100 text-base-content overflow-y-auto">
                        <h2 class="menu-title text-xl mb-4">Admin Panel</h2>

                        <!-- Navigation Links -->
                        <ul class="space-y-2">
                            <li>
                                <a href="/admin/clients" class="flex items-center gap-3 p-3 hover:bg-base-200 rounded-lg">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-5.197a6 6 0 00-9-5.197" />
                                    </svg>
                                    <span>Manage Clients</span>
                                </a>
                            </li>
                            <li>
                                <a href="/admin/payments" class="flex items-center gap-3 p-3 hover:bg-base-200 rounded-lg">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                                    </svg>
                                    <span>Order History</span>
                                </a>
                            </li>
                        </ul>

                        <div class="divider my-6"></div>

                        <!-- Quick Stats Section -->
                        <div class="space-y-4">
                            <h3 class="text-lg font-semibold mb-2">Quick Stats</h3>

                            <div class="stats shadow bg-base-200">
                                <div class="stat">
                                    <div class="stat-title">Total Users</div>
                                    <div class="stat-value text-primary">@totalUsers</div>
                                    <div class="stat-desc">All registered users</div>
                                </div>
                            </div>

                            <div class="stats shadow bg-base-200">
                                <div class="stat">
                                    <div class="stat-title">Pending Orders</div>
                                    <div class="stat-value text-secondary">@pendingOrders</div>
                                    <div class="stat-desc">Awaiting processing</div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Activity (Optional) -->
                        <div class="mt-8">
                            <h3 class="text-lg font-semibold mb-2">Recent Activity</h3>
                            <div class="space-y-3">
                                @if (recentActivities != null && recentActivities.Any())
                                {
                                    @foreach (var activity in recentActivities)
                                    {
                                        <div class="flex items-center gap-3 p-2 bg-base-200 rounded">
                                            <div class="avatar">
                                                <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
                                                    <span class="text-xs">@activity.Initials</span>
                                                </div>
                                            </div>
                                            <div class="text-sm">
                                                <p>@activity.Description</p>
                                                <p class="text-xs text-gray-500">@activity.TimeAgo</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-sm text-gray-500">No recent activity</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@code {
    private bool showCart = false;
    private int totalUsers = 0;
    private int pendingOrders = 0;
    private List<ActivityItem> recentActivities = new();

    private void ToggleCart()
    {
        showCart = !showCart;
        StateHasChanged();
    }

    private void OnCartVisibilityChanged(bool newValue)
    {
        showCart = newValue;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        CartService.OnChange += StateHasChanged;
        await LoadAdminStats();
    }

    private async Task LoadAdminStats()
    {
        try
        {
            // Load total users
            var usersResponse = await Http.GetAsync("api/user/count");
            if (usersResponse.IsSuccessStatusCode)
            {
                totalUsers = await usersResponse.Content.ReadFromJsonAsync<int>();
            }

            // Load pending orders
            var ordersResponse = await Http.GetAsync("api/order/count-pending");
            if (ordersResponse.IsSuccessStatusCode)
            {
                pendingOrders = await ordersResponse.Content.ReadFromJsonAsync<int>();
            }

            // Load recent activities
            var activitiesResponse = await Http.GetAsync("api/activity/recent");
            if (activitiesResponse.IsSuccessStatusCode)
            {
                recentActivities = await activitiesResponse.Content.ReadFromJsonAsync<List<ActivityItem>>();
            }
        }
        catch
        {
            // Silently fail - stats are not critical
        }
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "jwtToken");
        Navigation.NavigateTo("/login", true);
    }

    public class ActivityItem
    {
        public string Initials { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string TimeAgo { get; set; } = string.Empty;
    }
}