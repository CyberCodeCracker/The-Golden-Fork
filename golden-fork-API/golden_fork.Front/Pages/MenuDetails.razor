@page "/menu/{menuId:int}"
@attribute [Authorize]
@using golden_fork.Front.DTOs.Kitchen
@using System.Text.Json
@using System.Security.Claims
@using golden_fork.Front.Services
@using golden_fork.Front.Shared
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider
@inject CartService CartService

<PageTitle>Menu Details • Golden Fork</PageTitle>

<div class="container mx-auto px-4 py-8">
    @if (isLoading)
    {
        <div class="flex justify-center py-20">
            <span class="loading loading-spinner loading-lg"></span>
        </div>
    }
    else if (menu == null)
    {
        <div class="text-center py-20">
            <p class="text-2xl text-gray-500">Menu not found</p>
            <button @onclick="BackToMenus" class="btn btn-primary mt-4">
                Back to Menus
            </button>
        </div>
    }
    else
    {
        <div class="mb-8 flex justify-between items-start">
            <div>
                <h1 class="text-4xl font-bold text-orange-600 mb-4">@menu.Name</h1>
                @if (!string.IsNullOrEmpty(menu.Description))
                {
                    <p class="text-xl text-gray-700 mb-6">@menu.Description</p>
                }
                <p class="text-lg text-gray-600">@menu.Items.Count() item@(menu.Items.Count() == 1 ? "" : "s")</p>
            </div>

            @if (IsAdminOrChef)
            {
                <button @onclick="OpenAddItemsModal" class="btn btn-success">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Items to Menu
                </button>
            }
        </div>

        @if (menu.Items == null || !menu.Items.Any())
        {
            <div class="text-center py-20">
                <p class="text-2xl text-gray-500">No items in this menu yet.</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
                @foreach (var item in menu.Items)
                {
        <CardItem 
            Item="@(new golden_fork.Front.DTOs.Kitchen.ItemResponse { // Specify namespace
                Id = item.ItemId,
                Name = item.Name,
                Description = item.Description,
                Price = item.Price,
                SpecialPrice = item.SpecialPrice,
                ImageUrl = item.ImageUrl,
                IsAvailable = item.IsAvailable,
                IsSpecial = item.IsSpecial,
                Category = new DTOs.Kitchen.CategoryResponse { Name = item.Category }
            })"
            ShowAdminControls="IsAdminOrChef"
            ShowNoDescriptionMessage="true"
            CurrentQuantity="@(quantities.ContainsKey(item.ItemId) ? quantities[item.ItemId] : 1)"
            OnViewDetailsCallback="() => OpenItemDetails(item)"
            OnAddToCartCallback="() => AddToCart(item)"
            OnRemoveItemCallback="() => RemoveItemFromMenu(item.ItemId)"
            OnQuantityChangedCallback="(qty) => quantities[item.ItemId] = qty" /> 
                }
            </div>
        }
    }
</div>

<!-- Item Details Modal -->
@if (showItemDetailsModal)
{
    <div class="modal modal-open">
        <div class="modal-box">
            <h3 class="font-bold text-2xl mb-4">@selectedItem.Name</h3>
            @if (!string.IsNullOrEmpty(selectedItem.ImageUrl))
            {
                <img src="@selectedItem.ImageUrl" alt="@selectedItem.Name" class="w-full h-64 object-cover rounded-lg mb-6" />
            }
            <div class="space-y-3">
                <p class="text-lg"><strong>Category:</strong> @selectedItem.Category</p>
                <p class="text-lg"><strong>Price:</strong> @selectedItem.Price.ToString("C")</p>
                @if (selectedItem.SpecialPrice.HasValue)
                {
                    <p class="text-lg"><strong>Special Price:</strong> <span class="text-green-600 font-bold">@selectedItem.SpecialPrice.Value.ToString("C")</span></p>
                }
                @if (!string.IsNullOrEmpty(selectedItem.Description))
                {
                    <div class="mt-4">
                        <p class="font-semibold">Description:</p>
                        <p class="text-gray-700 mt-1">@selectedItem.Description</p>
                    </div>
                }
                else
                {
                    <p class="text-gray-500 italic">No description available</p>
                }
                <p class="text-sm @(selectedItem.IsAvailable ? "text-success" : "text-error")">
                    @(selectedItem.IsAvailable ? "✓ Available" : "✗ Unavailable")
                </p>
                @if (selectedItem.IsSpecial)
                {
                    <div class="badge badge-success">Special Offer</div>
                }
            </div>
            <div class="modal-action mt-6">
                <button @onclick="CloseItemDetailsModal" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
}

<!-- Add Items to Menu Modal -->
@if (showAddItemsModal)
{
    <div class="modal modal-open">
        <div class="modal-box w-11/12 max-w-5xl">
            <div class="flex justify-between items-center mb-6">
                <h3 class="font-bold text-2xl">Add Items to @menu.Name</h3>
                <button @onclick="CloseAddItemsModal" class="btn btn-sm btn-circle">✕</button>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error mb-4">
                    @errorMessage
                </div>
            }

            <!-- Item Selection Form -->
            @if (selectedItemForAdd != null)
            {
                <div class="card bg-base-200 mb-6">
                    <div class="card-body">
                        <h4 class="card-title">Configure Item: @selectedItemForAdd.Name</h4>
                        <EditForm Model="menuItemRequest" OnValidSubmit="SubmitAddItemToMenu">
                            <DataAnnotationsValidator />
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="label"><span class="label-text">Position in Menu</span></label>
                                    <InputNumber @bind-Value="menuItemRequest.Position" class="input input-bordered w-full" />
                                </div>
                                
                                <div>
                                    <label class="label"><span class="label-text">Category</span></label>
                                    <InputSelect @bind-Value="menuItemRequest.CategoryId" TValue="int" class="select select-bordered w-full">
                                        <option value="0">-- Select Category --</option>
                                        @foreach (var cat in categories)
                                        {
                                            <option value="@cat.Id">@cat.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                                
                                <div class="md:col-span-2">
                                    <label class="label"><span class="label-text">Name *</span></label>
                                    <InputText @bind-Value="menuItemRequest.Name" class="input input-bordered w-full" />
                                </div>
                                
                                <div class="md:col-span-2">
                                    <label class="label"><span class="label-text">Description</span></label>
                                    <InputTextArea @bind-Value="menuItemRequest.Description" class="textarea textarea-bordered w-full" rows="3" />
                                </div>
                                
                                <div>
                                    <label class="label"><span class="label-text">Price *</span></label>
                                    <InputNumber @bind-Value="menuItemRequest.Price" class="input input-bordered w-full" step="0.01" />
                                </div>
                                
                                <div>
                                    <label class="label"><span class="label-text">Special Price (optional)</span></label>
                                    <InputNumber @bind-Value="menuItemRequest.SpecialPrice" class="input input-bordered w-full" step="0.01" />
                                </div>
                                
                                <div class="form-control">
                                    <label class="label cursor-pointer">
                                        <span class="label-text">Available</span>
                                        <InputCheckbox @bind-Value="menuItemRequest.IsAvailable" class="checkbox checkbox-primary" />
                                    </label>
                                </div>
                                
                                <div class="form-control">
                                    <label class="label cursor-pointer">
                                        <span class="label-text">Special Offer</span>
                                        <InputCheckbox @bind-Value="menuItemRequest.IsSpecial" class="checkbox checkbox-success" />
                                    </label>
                                </div>
                            </div>
                            
                            <div class="modal-action mt-6">
                                <button type="submit" class="btn btn-primary" disabled="@(isAddingItem)">
                                    @if (isAddingItem)
                                    {
                                        <span class="loading loading-spinner"></span>
                                    }
                                    Add to Menu
                                </button>
                                <button type="button" @onclick="CancelItemSelection" class="btn">Cancel</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }

            <!-- Items List -->
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Special Price</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (allItems == null || !allItems.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-8">
                                    <span class="loading loading-spinner loading-sm"></span>
                                    <span class="ml-2">Loading items...</span>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in allItems)
                            {
                                var isAlreadyAdded = menu.Items.Any(x => x.ItemId == item.Id);
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@GetCorrectImageUrl(item.ImageUrl)" alt="@item.Name" class="w-16 h-16 object-cover rounded" />
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Category?.Name</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        @if (item.SpecialPrice.HasValue)
                                        {
                                            @item.SpecialPrice.Value.ToString("C")
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">—</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(item.IsAvailable ? "badge-success" : "badge-error")">
                                            @(item.IsAvailable ? "Available" : "Unavailable")
                                        </span>
                                    </td>
                                    <td>
                                        @if (isAlreadyAdded)
                                        {
                                            <span class="badge badge-success">Already in menu</span>
                                        }
                                        else
                                        {
                                            <button @onclick="() => SelectItemForAdd(item)" 
                                                    class="btn btn-primary btn-sm"
                                                    disabled="@(selectedItemForAdd != null)">
                                                Select
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-action mt-6">
                <button @onclick="CloseAddItemsModal" class="btn">Close</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int menuId { get; set; }

    private MenuWithItemsResponse? menu;
    private List<golden_fork.Front.DTOs.Kitchen.ItemResponse>? allItems; // Specify full namespace
    private List<CategoryResponse>? categories;
    private bool isLoading = true;
    private bool IsAdminOrChef = false;

    // Modals
    private bool showItemDetailsModal = false;
    private MenuItemResponse selectedItem = new();
    private bool showAddItemsModal = false;

    // Add item to menu
    private golden_fork.Front.DTOs.Kitchen.ItemResponse? selectedItemForAdd = null; // Specify namespace
    private MenuItemRequest menuItemRequest = new();
    private bool isAddingItem = false;
    private string errorMessage = string.Empty;

    // Quantity per item
    private Dictionary<int, int> quantities = new();

    private string apiBaseUrl = "http://localhost:5128";

    private string GetCorrectImageUrl(string url)
    {
        if (string.IsNullOrEmpty(url))
            return $"{apiBaseUrl}/images/default-item.jpg";

        if (url.StartsWith("/media/"))
            return $"{apiBaseUrl}/images/{url.Substring(7)}";

        if (url.StartsWith("/images/"))
            return $"{apiBaseUrl}{url}";

        if (url.StartsWith("http"))
            return url;

        return $"{apiBaseUrl}/images/default-item.jpg";
    }

    protected override async Task OnInitializedAsync()
    {
        await CheckRole();
        await LoadMenu();
    }

    private async Task LoadMenu()
    {
        isLoading = true;
        try
        {
            menu = await Http.GetFromJsonAsync<MenuWithItemsResponse>($"api/menu/{menuId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading menu: {ex.Message}");
            menu = null;
        }
        isLoading = false;
    }

    private async Task LoadAllItems()
    {
        try
        {
            var paged = await Http.GetFromJsonAsync<PagedResult<golden_fork.Front.DTOs.Kitchen.ItemResponse>>("api/item?pageSize=100");
            allItems = paged?.Items ?? new List<golden_fork.Front.DTOs.Kitchen.ItemResponse>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading items: {ex.Message}");
            allItems = new List<golden_fork.Front.DTOs.Kitchen.ItemResponse>();
        }
    }

    private async Task LoadCategories()
    {
        try
        {
            var result = await Http.GetFromJsonAsync<PagedResult<CategoryResponse>>("api/category");
            categories = result?.Items ?? new List<CategoryResponse>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading categories: {ex.Message}");
            categories = new List<CategoryResponse>();
        }
    }

    private async Task CheckRole()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var role = authState.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        IsAdminOrChef = role == "Admin" || role == "Chef";
    }

    private void BackToMenus()
    {
        Navigation.NavigateTo("/menu");
    }

    private void OpenItemDetails(MenuItemResponse item)
    {
        selectedItem = item;
        showItemDetailsModal = true;
    }

    private void CloseItemDetailsModal()
    {
        showItemDetailsModal = false;
    }

    private async Task OpenAddItemsModal()
    {
        await LoadAllItems();
        await LoadCategories();
        showAddItemsModal = true;
    }

    private void CloseAddItemsModal()
    {
        showAddItemsModal = false;
        selectedItemForAdd = null;
        menuItemRequest = new();
        errorMessage = string.Empty;
    }

    private void SelectItemForAdd(golden_fork.Front.DTOs.Kitchen.ItemResponse item) // Update parameter type
    {
        selectedItemForAdd = item;
        
        // Pre-fill the form with item data
        menuItemRequest = new MenuItemRequest
        {
            Name = item.Name,
            Description = item.Description,
            Price = item.Price,
            SpecialPrice = item.SpecialPrice,
            IsAvailable = item.IsAvailable,
            IsSpecial = item.IsSpecial,
            ImageUrl = item.ImageUrl,
            CategoryId = item.Category?.Id ?? 0,
            Position = 0 // Default position
        };
    }

    private void CancelItemSelection()
    {
        selectedItemForAdd = null;
        menuItemRequest = new();
    }

    private async Task SubmitAddItemToMenu()
    {
        if (selectedItemForAdd == null) return;
        
        isAddingItem = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            // Validate CategoryId
            if (menuItemRequest.CategoryId == 0)
            {
                errorMessage = "Please select a category";
                isAddingItem = false;
                StateHasChanged();
                return;
            }

            var response = await Http.PostAsJsonAsync($"api/menu/{menuId}/items", menuItemRequest);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<MenuItemAddResponse>();
                await JS.InvokeVoidAsync("alert", $"Item '{menuItemRequest.Name}' added successfully to {menu?.Name}!");
                
                // Reset and close
                selectedItemForAdd = null;
                menuItemRequest = new();
                await LoadMenu(); // Refresh the menu
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to add item: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isAddingItem = false;
            StateHasChanged();
        }
    }

    private async Task RemoveItemFromMenu(int itemId)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Remove this item from the menu?");
        if (!confirm) return;

        try
        {
            var response = await Http.DeleteAsync($"api/menu/{menuId}/items/{itemId}");

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Item removed from menu!");
                await LoadMenu(); // Refresh the menu
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Failed to remove item: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task AddToCart(MenuItemResponse item)
    {
        try
        {
            var quantity = quantities.ContainsKey(item.ItemId) ? quantities[item.ItemId] : 1;

            if (CartService != null)
            {
                // Use the DTO ItemResponse directly
                var simpleItem = new golden_fork.Front.DTOs.Kitchen.ItemResponse // Specify namespace
                {
                    Id = item.ItemId,
                    Name = item.Name,
                    Price = item.Price,
                    ImageUrl = item.ImageUrl,
                    Description = item.Description,
                    SpecialPrice = item.SpecialPrice,
                    IsAvailable = item.IsAvailable,
                    IsSpecial = item.IsSpecial
                };

                CartService.AddItem(simpleItem, quantity);
                await JS.InvokeVoidAsync("alert", $"{quantity}x {item.Name} added to cart!");
                quantities[item.ItemId] = 1;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error adding to cart: {ex.Message}");
        }
    }

    // REMOVE the local ItemResponse class - keep only these DTOs:

    public class MenuWithItemsResponse
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public List<MenuItemResponse> Items { get; set; } = new();
    }

    public class MenuItemAddResponse
    {
        public string Message { get; set; } = string.Empty;
        public bool Success { get; set; }
        public int ItemId { get; set; }
    }

    public class PagedResult<T>
    {
        public List<T> Items { get; set; } = new();
        public int TotalCount { get; set; }
        public int PageNumber { get; set; }
        public int PageSize { get; set; }
        public int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);
    }
}