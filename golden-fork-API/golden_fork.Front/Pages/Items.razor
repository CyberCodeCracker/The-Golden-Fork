@page "/items"
@attribute [Authorize]
@using System.Security.Claims
@using golden_fork.Front.DTOs.Kitchen
@using System.Text.Json
@using golden_fork.Front.Services
@inject HttpClient Http
@inject CartService CartService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Items • Golden Fork</PageTitle>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-orange-600 mb-8">All Items</h1>

    <!-- Search Bar -->
    <div class="mb-8 flex flex-col sm:flex-row gap-4">
        <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="Search by name or description..." class="input input-bordered w-full max-w-lg" />
        <button @onclick="LoadItems" class="btn btn-primary">Search</button>

        @if (IsAdminOrChef)
        {
            <button @onclick="OpenAddItemModal" class="btn btn-success sm:ml-auto">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add New Item
            </button>
        }
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center py-20">
            <span class="loading loading-spinner loading-lg"></span>
        </div>
    }
    else if (pagedResult == null || !pagedResult.Items.Any())
    {
        <div class="text-center py-20">
            <p class="text-2xl text-gray-500">No items found</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
            @foreach (var item in pagedResult.Items)
            {
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all w-full relative flex flex-col h-full">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <figure class="h-64 overflow-hidden flex-shrink-0">
                            <img src="@GetCorrectImageUrl(item.ImageUrl)" alt="@item.Name" class="w-full h-full object-cover" />
                        </figure>
                    }
                    else
                    {
                        <figure class="h-64 bg-gray-200 flex items-center justify-center flex-shrink-0">
                            <span class="text-gray-500">No Image</span>
                        </figure>
                    }

                    <div class="card-body flex flex-col h-full p-6">
                        <!-- Content area that can grow -->
                        <div class="flex-1 min-h-0">
                            <div class="flex justify-between items-start mb-3">
                                <h2 class="card-title text-2xl">@item.Name</h2>
                                <div class="badge badge-secondary badge-lg">@item.Category?.Name</div>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-gray-700 line-clamp-2">@item.Description</p>
                            }
                        </div>

                        <!-- Fixed height bottom section -->
                        <div class="mt-auto pt-4 border-t border-gray-200">
                            <div class="mb-4">
                                <p class="text-3xl font-bold text-primary">@item.Price.ToString("C")</p>
                                @if (item.SpecialPrice.HasValue)
                                {
                                    <p class="text-lg text-gray-500 line-through">@item.SpecialPrice.Value.ToString("C")</p>
                                }
                            </div>

                            <div class="flex gap-3 mb-3">
                                <button @onclick="() => OpenItemDetails(item)" class="btn btn-info flex-1">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Details
                                </button>

                                @if (item.IsAvailable)
                                {
                                    <div class="flex items-center gap-2">
                                        @{
                                            // Initialize quantity if not exists
                                            if (!quantities.ContainsKey(item.Id))
                                            {
                                                quantities[item.Id] = 1;
                                            }
                                        }
                                        <input type="number"
                                               value="@quantities[item.Id]"
                                               @onchange="(e) => UpdateQuantity(item.Id, e.Value?.ToString())"
                                               min="1"
                                               class="input input-bordered input-sm w-20" />
                                        <button @onclick="() => AddToCart(item)" class="btn btn-primary px-4">
                                            Add
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge badge-error badge-lg">Unavailable</span>
                                }
                            </div>

                            @if (IsAdminOrChef)
                            {
                                <div class="flex gap-2">
                                    <button @onclick="() => OpenEditItemModal(item)" class="btn btn-warning btn-sm flex-1">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Edit
                                    </button>
                                    <button @onclick="() => DeleteItem(item.Id)" class="btn btn-error btn-sm flex-1">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Delete
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Pagination -->
        @if (pagedResult.TotalPages > 1)
        {
            <div class="flex justify-center mt-12 gap-2">
                <button @onclick="() => ChangePage(pagedResult.PageNumber - 1)"
                        disabled="@(pagedResult.PageNumber == 1)"
                        class="btn btn-outline">
                    Previous
                </button>

                <span class="flex items-center px-4">
                    Page @pagedResult.PageNumber of @pagedResult.TotalPages
                </span>

                <button @onclick="() => ChangePage(pagedResult.PageNumber + 1)"
                        disabled="@(pagedResult.PageNumber == pagedResult.TotalPages)"
                        class="btn btn-outline">
                    Next
                </button>
            </div>
        }
    }
</div>

<!-- Item Details Modal -->
@if (showItemDetailsModal)
{
    <div class="modal modal-open">
        <div class="modal-box max-w-2xl">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-bold text-2xl">@selectedItem.Name</h3>
                <button @onclick="CloseItemDetailsModal" class="btn btn-sm btn-circle">✕</button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    @if (!string.IsNullOrEmpty(selectedItem.ImageUrl))
                    {
                        <img src="@GetCorrectImageUrl(selectedItem.ImageUrl)" alt="@selectedItem.Name" class="w-full h-64 object-cover rounded-lg" />
                    }
                    else
                    {
                        <div class="w-full h-64 bg-gray-200 flex items-center justify-center rounded-lg">
                            <span class="text-gray-500">No Image Available</span>
                        </div>
                    }
                </div>

                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-3xl font-bold text-primary">@selectedItem.Price.ToString("C")</p>
                            @if (selectedItem.SpecialPrice.HasValue)
                            {
                                <p class="text-lg text-gray-500 line-through">@selectedItem.SpecialPrice.Value.ToString("C")</p>
                                <div class="badge badge-success mt-1">Special Offer!</div>
                            }
                        </div>
                        <div class="badge badge-lg @(selectedItem.IsAvailable ? "badge-success" : "badge-error")">
                            @(selectedItem.IsAvailable ? "Available" : "Unavailable")
                        </div>
                    </div>

                    <div>
                        <h4 class="font-semibold text-lg mb-2">Category</h4>
                        <p class="badge badge-secondary badge-lg">@selectedItem.Category?.Name</p>
                    </div>

                    @if (!string.IsNullOrEmpty(selectedItem.Description))
                    {
                        <div>
                            <h4 class="font-semibold text-lg mb-2">Description</h4>
                            <p class="text-gray-700">@selectedItem.Description</p>
                        </div>
                    }

                    <div>
                        <h4 class="font-semibold text-lg mb-2">Add to Cart</h4>
                        <div class="flex items-center gap-2">
                            <input type="number"
                                   @bind="selectedItemQuantity"
                                   min="1"
                                   class="input input-bordered w-20" />
                            <button @onclick="AddSelectedItemToCart" class="btn btn-primary" disabled="@(!selectedItem.IsAvailable)">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-action mt-6">
                <button @onclick="CloseItemDetailsModal" class="btn">Close</button>
                @if (IsAdminOrChef)
                {
                    <button @onclick="OpenEditItemModalFromDetails" class="btn btn-warning">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Edit Item
                    </button>
                }
            </div>
        </div>
    </div>
}

<!-- Add New Item Modal -->
@if (showAddItemModal)
{
    <div class="modal modal-open">
        <div class="modal-box w-11/12 max-w-2xl">
            <div class="flex justify-between items-center mb-6">
                <h3 class="font-bold text-2xl">Add New Item</h3>
                <button @onclick="CloseAddItemModal" class="btn btn-sm btn-circle">✕</button>
            </div>

            <EditForm Model="newItem" OnValidSubmit="HandleAddItem">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(modalMessage))
                {
                    <div class="alert @(modalSuccess ? "alert-success" : "alert-error") mb-4">
                        <span>@modalMessage</span>
                    </div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="label"><span class="label-text">Category *</span></label>
                        <InputSelect @bind-Value="newItem.CategoryId" TValue="int" class="select select-bordered w-full">
                            <option value="0">-- Select Category --</option>
                            @if (categories != null)
                            {
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            }
                        </InputSelect>
                        @if (newItem.CategoryId == 0)
                        {
                            <p class="text-red-500 text-sm mt-1">Please select a valid category</p>
                        }
                    </div>

                    <div>
                        <label class="label"><span class="label-text">Item Name *</span></label>
                        <InputText @bind-Value="newItem.Name" class="input input-bordered w-full" />
                    </div>

                    <div>
                        <label class="label"><span class="label-text">Price *</span></label>
                        <InputNumber @bind-Value="newItem.Price" class="input input-bordered w-full" step="0.01" />
                    </div>

                    <div class="md:col-span-2">
                        <label class="label"><span class="label-text">Description</span></label>
                        <InputTextArea @bind-Value="newItem.Description" class="textarea textarea-bordered w-full" rows="3" />
                    </div>

                    <div>
                        <label class="label"><span class="label-text">Photo</span></label>
                        <InputFile OnChange="OnFileChange" class="file-input file-input-bordered w-full" />
                        @if (selectedFile != null)
                        {
                            <p class="text-sm text-gray-500 mt-1">Selected: @selectedFile.Name</p>
                        }
                    </div>

                    <div>
                        <label class="label"><span class="label-text">Special Price (optional)</span></label>
                        <InputNumber @bind-Value="newItem.SpecialPrice" class="input input-bordered w-full" step="0.01" />
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Available</span>
                            <InputCheckbox @bind-Value="newItem.IsAvailable" class="checkbox checkbox-primary" />
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Special Offer</span>
                            <InputCheckbox @bind-Value="newItem.IsSpecial" class="checkbox checkbox-primary" />
                        </label>
                    </div>
                </div>

                <div class="modal-action mt-6">
                    <button type="submit" class="btn btn-primary" disabled="@(modalLoading || newItem.CategoryId == 0)">
                        @if (modalLoading)
                        {
                            <span class="loading loading-spinner"></span>
                        }
                        Add Item
                    </button>
                    <button type="button" @onclick="CloseAddItemModal" class="btn">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

