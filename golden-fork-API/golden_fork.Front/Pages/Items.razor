@code {
    private PagedResult<ItemResponse>? pagedResult;
    private List<CategoryResponse>? categories;
    private string searchTerm = "";
    private int currentPage = 1;
    private const int PageSize = 12;
    private bool isLoading = true;
    private bool IsAdminOrChef = false;

    // Item Details Modal
    private bool showItemDetailsModal = false;
    private ItemResponse selectedItem = new();
    private int selectedItemQuantity = 1;

    // Add Item Modal
    private bool showAddItemModal = false;
    private ItemRequest newItem = new();
    private string modalMessage = "";
    private bool modalSuccess = false;
    private bool modalLoading = false;
    private IBrowserFile? selectedFile;

    // Edit Item Modal
    private bool showEditItemModal = false;
    private ItemUpdate editItem = new();
    private string editModalMessage = "";
    private bool editModalSuccess = false;
    private bool editModalLoading = false;
    private IBrowserFile? editSelectedFile;
    private int editingItemId = 0;
    private string editItemOriginalName = "";
    private string currentItemImageUrl = "";

    // Quantity tracking
    private Dictionary<int, int> quantities = new();
    private string apiBaseUrl = "http://localhost:5128";

    // File upload handlers
    private void OnFileChange(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }

    private void OnEditFileChange(InputFileChangeEventArgs e)
    {
        editSelectedFile = e.File;
    }

    protected override async Task OnInitializedAsync()
    {
        await CheckRole();
        await LoadItems();
        await LoadCategories();
    }

    private async Task LoadItems()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var url = $"api/item?pageNumber={currentPage}&pageSize={PageSize}";
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                url += $"&searchTerm={Uri.EscapeDataString(searchTerm)}";
            }

            pagedResult = await Http.GetFromJsonAsync<PagedResult<ItemResponse>>(url);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading items: {ex.Message}");
            pagedResult = new PagedResult<ItemResponse>();
        }

        isLoading = false;
        StateHasChanged();
    }

    private async Task LoadCategories()
    {
        try
        {
            var result = await Http.GetFromJsonAsync<PagedResult<CategoryResponse>>("api/category");
            categories = result?.Items ?? new List<CategoryResponse>();
        }
        catch
        {
            categories = new List<CategoryResponse>();
        }
    }

    private async Task CheckRole()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var role = authState.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        IsAdminOrChef = role == "Admin" || role == "Chef";
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > (pagedResult?.TotalPages ?? 1)) return;
        currentPage = page;
        await LoadItems();
    }

    private void OpenItemDetails(ItemResponse item)
    {
        selectedItem = item;
        selectedItemQuantity = quantities.ContainsKey(item.Id) ? quantities[item.Id] : 1;
        showItemDetailsModal = true;
    }

    private void CloseItemDetailsModal()
    {
        showItemDetailsModal = false;
        selectedItem = new();
    }

    private void OpenAddItemModal()
    {
        newItem = new ItemRequest();
        selectedFile = null;
        modalMessage = "";
        showAddItemModal = true;
    }

    private void CloseAddItemModal()
    {
        showAddItemModal = false;
    }

    private async Task HandleAddItem()
    {
        modalLoading = true;
        modalMessage = "";
        StateHasChanged();

        try
        {
            var response = await Http.PostAsJsonAsync("api/item", newItem);

            if (response.IsSuccessStatusCode)
            {
                var jsonElement = await response.Content.ReadFromJsonAsync<JsonElement>();
                int itemId = 0;
                if (jsonElement.TryGetProperty("itemId", out var prop))
                {
                    itemId = prop.GetInt32();
                }
                else if (jsonElement.TryGetProperty("id", out prop))
                {
                    itemId = prop.GetInt32();
                }

                if (selectedFile != null && itemId > 0)
                {
                    var content = new MultipartFormDataContent();
                    content.Add(new StreamContent(selectedFile.OpenReadStream(5 * 1024 * 1024)), "photo", selectedFile.Name);

                    var uploadResponse = await Http.PostAsync($"api/item/{itemId}/upload-photo", content);

                    if (!uploadResponse.IsSuccessStatusCode)
                    {
                        modalMessage = "Item added, but photo upload failed";
                    }
                }

                modalSuccess = true;
                modalMessage = "Item added successfully!";

                await Task.Delay(1500);
                CloseAddItemModal();
                await LoadItems();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                modalSuccess = false;
                modalMessage = "Failed: " + error;
            }
        }
        catch (Exception ex)
        {
            modalSuccess = false;
            modalMessage = "Error: " + ex.Message;
        }

        modalLoading = false;
        StateHasChanged();
    }

    private async Task DeleteItem(int itemId)
    {
        if (itemId == 0)
        {
            Console.WriteLine("Error: itemId is 0");
            return;
        }

        var confirm = await JS.InvokeAsync<bool>("confirm", "Delete this item permanently?");
        if (!confirm) return;

        Console.WriteLine($"Deleting item with ID: {itemId}");

        var response = await Http.DeleteAsync($"api/item/{itemId}");

        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Item deleted successfully!");
            await LoadItems();
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Delete failed: {error}");
            Console.WriteLine($"Delete failed: {error}");
        }
    }

    private void OpenEditItemModal(ItemResponse item)
    {
        editingItemId = item.Id;
        editItemOriginalName = item.Name;
        currentItemImageUrl = item.ImageUrl ?? "";

        // Map ItemResponse to ItemUpdate
        editItem = new ItemUpdate
        {
            Name = item.Name,
            Description = item.Description,
            Price = item.Price,
            CategoryId = item.Category?.Id,
            SpecialPrice = item.SpecialPrice,
            IsAvailable = item.IsAvailable,
            IsSpecial = item.IsSpecial
        };

        editSelectedFile = null;
        editModalMessage = "";
        showEditItemModal = true;
    }

    private void OpenEditItemModalFromDetails()
    {
        // Close details modal first
        CloseItemDetailsModal();

        // Find the item in the list
        var item = pagedResult?.Items.FirstOrDefault(i => i.Id == selectedItem.Id);
        if (item != null)
        {
            OpenEditItemModal(item);
        }
    }

    private void CloseEditItemModal()
    {
        showEditItemModal = false;
        editItem = new ItemUpdate();
        editingItemId = 0;
    }

    private async Task HandleUpdateItem()
    {
        editModalLoading = true;
        editModalMessage = "";
        StateHasChanged();

        try
        {
            // Prepare update data - only send non-null properties
            var updateData = new Dictionary<string, object>();

            if (!string.IsNullOrEmpty(editItem.Name))
                updateData["name"] = editItem.Name;

            if (!string.IsNullOrEmpty(editItem.Description))
                updateData["description"] = editItem.Description;

            if (editItem.Price.HasValue)
                updateData["price"] = editItem.Price.Value;

            if (editItem.CategoryId.HasValue)
                updateData["categoryId"] = editItem.CategoryId.Value;

            if (editItem.SpecialPrice.HasValue)
                updateData["specialPrice"] = editItem.SpecialPrice.Value;

            updateData["isAvailable"] = editItem.IsAvailable;
            updateData["isSpecial"] = editItem.IsSpecial;

            var response = await Http.PutAsJsonAsync($"api/item/{editingItemId}", updateData);

            if (response.IsSuccessStatusCode)
            {
                // Upload new photo if selected
                if (editSelectedFile != null)
                {
                    var content = new MultipartFormDataContent();
                    content.Add(new StreamContent(editSelectedFile.OpenReadStream(5 * 1024 * 1024)), "photo", editSelectedFile.Name);

                    var uploadResponse = await Http.PostAsync($"api/item/{editingItemId}/upload-photo", content);

                    if (!uploadResponse.IsSuccessStatusCode)
                    {
                        editModalMessage = "Item updated, but photo upload failed";
                    }
                }

                editModalSuccess = true;
                editModalMessage = "Item updated successfully!";

                await Task.Delay(1500);
                CloseEditItemModal();
                await LoadItems();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                editModalSuccess = false;
                editModalMessage = "Failed to update: " + error;
            }
        }
        catch (Exception ex)
        {
            editModalSuccess = false;
            editModalMessage = "Error: " + ex.Message;
        }

        editModalLoading = false;
        StateHasChanged();
    }

    private string GetCorrectImageUrl(string url)
    {
        if (string.IsNullOrEmpty(url))
            return $"{apiBaseUrl}/images/default-item.jpg";

        if (url.StartsWith("/media/"))
            return $"{apiBaseUrl}/images/{url.Substring(7)}";

        if (url.StartsWith("/images/"))
            return $"{apiBaseUrl}{url}";

        if (url.StartsWith("http"))
            return url;

        return $"{apiBaseUrl}/images/default-item.jpg";
    }

    private void UpdateQuantity(int itemId, string? value)
    {
        if (int.TryParse(value, out int quantity) && quantity > 0)
        {
            quantities[itemId] = quantity;
        }
        else
        {
            quantities[itemId] = 1;
        }
    }

    private async Task AddToCart(ItemResponse item)
    {
        try
        {
            // Get the current quantity for this item
            var quantity = quantities.ContainsKey(item.Id) ? quantities[item.Id] : 1;

            if (CartService != null)
            {
                // Call the CartService
                CartService.AddItem(item, quantity);

                // Show success message
                await JS.InvokeVoidAsync("alert", $"{quantity}x {item.Name} added to cart!");

                // Reset quantity to 1 after adding
                quantities[item.Id] = 1;

                // Force UI update
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Cart service not available");
                quantities[item.Id] = 1;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding to cart: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error adding to cart: {ex.Message}");
        }
    }

    private async Task AddSelectedItemToCart()
    {
