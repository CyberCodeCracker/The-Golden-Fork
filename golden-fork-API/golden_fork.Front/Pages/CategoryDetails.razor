@page "/category/{categoryId:int}"
@attribute [Authorize]
@using System.Security.Claims
@using golden_fork.Front.DTOs.Kitchen
@using System.Text.Json
@using golden_fork.Front.Shared
@using golden_fork.Front.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider
@inject CartService CartService

<PageTitle>Category Details • Golden Fork</PageTitle>

<div class="container mx-auto px-4 py-8">
    @if (isLoading)
    {
        <div class="flex justify-center py-20">
            <span class="loading loading-spinner loading-lg"></span>
        </div>
    }
    else if (category == null)
    {
        <div class="text-center py-20">
            <p class="text-2xl text-gray-500">Category not found</p>
            <button @onclick="BackToCategories" class="btn btn-primary mt-4">
                Back to Categories
            </button>
        </div>
    }
    else
    {
        <div class="mb-8 flex justify-between items-start">
            <div>
                <h1 class="text-4xl font-bold text-orange-600 mb-4">@category.Name</h1>
                @if (!string.IsNullOrEmpty(category.Description))
                {
                    <p class="text-xl text-gray-700 mb-6">@category.Description</p>
                }
                <p class="text-lg text-gray-600">@category.ItemCount item@(category.ItemCount == 1 ? "" : "s")</p>
            </div>

            @if (IsAdminOrChef)
            {
                <button @onclick="OpenAddItemsModal" class="btn btn-success">
                    Add Items to Category
                </button>
            }
        </div>

        @if (category.Items == null || !category.Items.Any())
        {
            <div class="text-center py-20">
                <p class="text-2xl text-gray-500">No items in this category yet.</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
                @foreach (var item in category.Items)
                {
                <CardItem 
                    Item="item"
                    ShowAdminControls="IsAdminOrChef"
                    ShowNoDescriptionMessage="false"
                    CurrentQuantity="@(quantities.ContainsKey(item.Id) ? quantities[item.Id] : 1)"
                    OnViewDetailsCallback="() => OpenItemDetails(item)"
                    OnAddToCartCallback="() => AddToCart(item)"
                    OnRemoveItemCallback="() => RemoveItemFromCategory(item.Id)"
                    OnQuantityChangedCallback="(qty) => quantities[item.Id] = qty" />        
                }
            </div>
        }
    }
</div>

<!-- Item Details Modal -->
@if (showItemDetailsModal)
{
    <div class="modal modal-open">
        <div class="modal-box">
            <h3 class="font-bold text-2xl mb-4">@selectedItem.Name</h3>
            @if (!string.IsNullOrEmpty(selectedItem.ImageUrl))
            {
                <img src="@GetCorrectImageUrl(selectedItem.ImageUrl)" alt="@selectedItem.Name" class="w-full h-64 object-cover rounded-lg mb-6" />
            }
            <p class="text-lg mb-2"><strong>Price:</strong> @selectedItem.Price.ToString("C")</p>
            @if (selectedItem.SpecialPrice.HasValue)
            {
                <p class="text-lg mb-2"><strong>Special Price:</strong> <span class="text-green-600">@selectedItem.SpecialPrice.Value.ToString("C")</span></p>
            }
            @if (!string.IsNullOrEmpty(selectedItem.Description))
            {
                <p class="text-gray-700">@selectedItem.Description</p>
            }
            <div class="modal-action">
                <button @onclick="CloseItemDetailsModal" class="btn">Close</button>
            </div>
        </div>
    </div>
}

<!-- Add Items to Category Modal (Table of existing items) -->
@if (showAddItemsModal)
{
    <div class="modal modal-open">
        <div class="modal-box w-11/12 max-w-5xl">
            <h3 class="font-bold text-2xl mb-6">Add Items to @category.Name</h3>

            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Special Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (allItems == null || !allItems.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">No items available</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in allItems)
                            {
                                var isInCategory = category.Items.Any(i => i.Id == item.Id);
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@GetCorrectImageUrl(item.ImageUrl)" alt="@item.Name" class="w-16 h-16 object-cover rounded" />
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        @if (item.SpecialPrice.HasValue)
                                        {
                                            @item.SpecialPrice.Value.ToString("C")
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isInCategory)
                                        {
                                            <span class="badge badge-success">Already in category</span>
                                        }
                                        else
                                        {
                                            <button @onclick="() => AddItemToCategory(item.Id)" class="btn btn-primary btn-sm">
                                                Add
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-action mt-6">
                <button @onclick="CloseAddItemsModal" class="btn">Close</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int categoryId { get; set; }

    private CategoryWithItemsResponse? category;
    private List<ItemResponse>? allItems;
    private bool isLoading = true;
    private bool IsAdminOrChef = false;

    // Modals
    private bool showItemDetailsModal = false;
    private ItemResponse selectedItem = new();
    private bool showAddItemsModal = false;

    // Quantity per item
    private Dictionary<int, int> quantities = new();

    private string apiBaseUrl = "http://localhost:5128"; // Your API URL

    private string GetCorrectImageUrl(string url)
    {
        if (string.IsNullOrEmpty(url))
            return $"{apiBaseUrl}/images/default-item.jpg";

        // If it's a relative path starting with /media/, convert to API URL
        if (url.StartsWith("/media/"))
            return $"{apiBaseUrl}/images/{url.Substring(7)}";

        // If it's a relative path starting with /images/, convert to API URL
        if (url.StartsWith("/images/"))
            return $"{apiBaseUrl}{url}";

        // If it's already a full URL, return as-is
        if (url.StartsWith("http"))
            return url;

        // Default fallback
        return $"{apiBaseUrl}/images/default-item.jpg";
    }

    protected override async Task OnInitializedAsync()
    {
        await CheckRole();
        await LoadCategory();
        await LoadAllItems();
    }

    private async Task LoadCategory()
    {
        isLoading = true;
        try
        {
            category = await Http.GetFromJsonAsync<CategoryWithItemsResponse>($"api/category/{categoryId}");

            // Initialize quantities for all items in the category
            if (category?.Items != null)
            {
                foreach (var item in category.Items)
                {
                    if (!quantities.ContainsKey(item.Id))
                    {
                        quantities[item.Id] = 1;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading category: {ex.Message}");
            category = null;
        }
        isLoading = false;
    }

    private async Task LoadAllItems()
    {
        try
        {
            var paged = await Http.GetFromJsonAsync<PagedResult<ItemResponse>>("api/item");
            allItems = paged?.Items ?? new List<ItemResponse>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading items: {ex.Message}");
            allItems = new List<ItemResponse>();
        }
    }

    private async Task CheckRole()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var role = authState.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        IsAdminOrChef = role == "Admin" || role == "Chef";
    }

    private void BackToCategories()
    {
        Navigation.NavigateTo("/categories");
    }

    private void OpenItemDetails(ItemResponse item)
    {
        selectedItem = item;
        showItemDetailsModal = true;
    }

    private void CloseItemDetailsModal()
    {
        showItemDetailsModal = false;
    }

    private void OpenAddItemsModal()
    {
        showAddItemsModal = true;
    }

    private void CloseAddItemsModal()
    {
        showAddItemsModal = false;
    }

    private async Task AddItemToCategory(int itemId)
    {
        var response = await Http.PostAsJsonAsync($"api/category/{categoryId}/items/{itemId}", new { });

        if (response.IsSuccessStatusCode)
        {
            await LoadCategory();
            await LoadAllItems();
        }
    }

    private async Task RemoveItemFromCategory(int itemId)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Remove this item from the category?");
        if (!confirm) return;

        var response = await Http.DeleteAsync($"api/category/{categoryId}/items/{itemId}");

        if (response.IsSuccessStatusCode)
        {
            await LoadCategory();
        }
    }

    // Handle quantity updates
    private void UpdateQuantity(int itemId, string? value)
    {
        if (int.TryParse(value, out int quantity) && quantity > 0)
        {
            quantities[itemId] = quantity;
        }
        else
        {
            quantities[itemId] = 1;
        }
    }

    // Add to cart functionality
    private async Task AddToCart(ItemResponse item)
    {
        try
        {
            // Get the current quantity for this item
            var quantity = quantities.ContainsKey(item.Id) ? quantities[item.Id] : 1;

            if (CartService != null)
            {
                // Call the CartService
                CartService.AddItem(item, quantity);

                // Show success message
                await JS.InvokeVoidAsync("alert", $"{quantity}x {item.Name} added to cart!");

                // Reset quantity to 1 after adding
                quantities[item.Id] = 1;

                // Force UI update
                StateHasChanged();
            }
            else
            {
                // Fallback if CartService is not available
                await JS.InvokeVoidAsync("alert", $"{quantity}x {item.Name} added to cart! (Cart service not available)");
                quantities[item.Id] = 1;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding to cart: {ex.Message}");
            await JS.InvokeVoidAsync("alert", $"Error adding to cart: {ex.Message}");
        }
    }
}