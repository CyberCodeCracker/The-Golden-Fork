@page "/category/{categoryId:int}"
@attribute [Authorize]
@using System.Security.Claims
@using golden_fork.Front.DTOs.Kitchen
@using System.Text.Json
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Category Details • Golden Fork</PageTitle>

<div class="container mx-auto px-4 py-8">
    @if (isLoading)
    {
        <div class="flex justify-center py-20">
            <span class="loading loading-spinner loading-lg"></span>
        </div>
    }
    else if (category == null)
    {
        <div class="text-center py-20">
            <p class="text-2xl text-gray-500">Category not found</p>
            <button @onclick="BackToCategories" class="btn btn-primary mt-4">
                Back to Categories
            </button>
        </div>
    }
    else
    {
        <div class="mb-8 flex justify-between items-start">
            <div>
                <h1 class="text-4xl font-bold text-orange-600 mb-4">@category.Name</h1>
                @if (!string.IsNullOrEmpty(category.Description))
                {
                    <p class="text-xl text-gray-700 mb-6">@category.Description</p>
                }
                <p class="text-lg text-gray-600">@category.ItemCount item@(category.ItemCount == 1 ? "" : "s")</p>
            </div>

            @if (IsAdminOrChef)
            {
                <button @onclick="OpenAddItemsModal" class="btn btn-success">
                    Add Items to Category
                </button>
            }
        </div>

        @if (category.Items == null || !category.Items.Any())
        {
            <div class="text-center py-20">
                <p class="text-2xl text-gray-500">No items in this category yet.</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
                @foreach (var item in category.Items)
                {
                    <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all w-full relative">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <figure class="h-64 overflow-hidden">
                                <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-full object-cover" />
                            </figure>
                        }
                        <div class="card-body">
                            <h2 class="card-title text-2xl">@item.Name</h2>

                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-gray-700 mt-2">@item.Description</p>
                            }

                            <div class="mt-6 flex flex-col gap-4">
                                <div class="flex justify-between items-end">
                                    <div>
                                        <p class="text-3xl font-bold text-primary">@item.Price.ToString("C")</p>
                                        @if (item.SpecialPrice.HasValue)
                                        {
                                            <p class="text-lg text-gray-500 line-through">@item.SpecialPrice.Value.ToString("C")</p>
                                        }
                                    </div>
                                </div>

                                <div class="flex gap-3">
                                    <button @onclick="() => OpenItemDetails(item)" class="btn btn-info flex-1">
                                        View Details
                                    </button>

                                    @if (item.IsAvailable)
                                    {
                                        <button class="btn btn-primary flex-1">Add to Cart</button>
                                    }
                                    else
                                    {
                                        <span class="badge badge-error badge-lg">Unavailable</span>
                                    }
                                </div>
                            </div>

                            @if (IsAdminOrChef)
                            {
                                <div class="absolute top-2 right-2">
                                    <button @onclick="() => RemoveItemFromCategory(item.Id)" class="btn btn-ghost btn-circle text-red-600">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<!-- Item Details Modal -->
@if (showItemDetailsModal)
{
    <div class="modal modal-open">
        <div class="modal-box">
            <h3 class="font-bold text-2xl mb-4">@selectedItem.Name</h3>
            @if (!string.IsNullOrEmpty(selectedItem.ImageUrl))
            {
                <img src="@selectedItem.ImageUrl" alt="@selectedItem.Name" class="w-full h-64 object-cover rounded-lg mb-6" />
            }
            <p class="text-lg mb-2"><strong>Price:</strong> @selectedItem.Price.ToString("C")</p>
            @if (selectedItem.SpecialPrice.HasValue)
            {
                <p class="text-lg mb-2"><strong>Special Price:</strong> <span class="text-green-600">@selectedItem.SpecialPrice.Value.ToString("C")</span></p>
            }
            @if (!string.IsNullOrEmpty(selectedItem.Description))
            {
                <p class="text-gray-700">@selectedItem.Description</p>
            }
            <div class="modal-action">
                <button @onclick="CloseItemDetailsModal" class="btn">Close</button>
            </div>
        </div>
    </div>
}

<!-- Add Items to Category Modal (Table of existing items) -->
@if (showAddItemsModal)
{
    <div class="modal modal-open">
        <div class="modal-box w-11/12 max-w-5xl">
            <h3 class="font-bold text-2xl mb-6">Add Items to @category.Name</h3>

            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Special Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (allItems == null || !allItems.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">No items available</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in allItems)
                            {
                                var isInCategory = category.Items.Any(i => i.Id == item.Id);
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="w-16 h-16 object-cover rounded" />
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        @if (item.SpecialPrice.HasValue)
                                        {
                                            @item.SpecialPrice.Value.ToString("C")
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isInCategory)
                                        {
                                            <span class="badge badge-success">Already in category</span>
                                        }
                                        else
                                        {
                                            <button @onclick="() => AddItemToCategory(item.Id)" class="btn btn-primary btn-sm">
                                                Add
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal-action mt-6">
                <button @onclick="CloseAddItemsModal" class="btn">Close</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int categoryId { get; set; }

    private CategoryWithItemsResponse? category;
    private List<ItemResponse>? allItems;
    private bool isLoading = true;
    private bool IsAdminOrChef = false;

    // Modals
    private bool showItemDetailsModal = false;
    private ItemResponse selectedItem = new();
    private bool showAddItemsModal = false;

    protected override async Task OnInitializedAsync()
    {
        await CheckRole();
        await LoadCategory();
        await LoadAllItems();
    }

    private async Task LoadCategory()
    {
        isLoading = true;
        try
        {
            category = await Http.GetFromJsonAsync<CategoryWithItemsResponse>($"api/category/{categoryId}");
        }
        catch
        {
            category = null;
        }
        isLoading = false;
    }

    private async Task LoadAllItems()
    {
        try
        {
            var paged = await Http.GetFromJsonAsync<PagedResult<ItemResponse>>("api/item");
            allItems = paged?.Items ?? new List<ItemResponse>();
        }
        catch
        {
            allItems = new List<ItemResponse>();
        }
    }

    private async Task CheckRole()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var role = authState.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        IsAdminOrChef = role == "Admin" || role == "Chef";
    }

    private void BackToCategories()
    {
        Navigation.NavigateTo("/categories");
    }

    private void OpenItemDetails(ItemResponse item)
    {
        selectedItem = item;
        showItemDetailsModal = true;
    }

    private void CloseItemDetailsModal()
    {
        showItemDetailsModal = false;
    }

    private void OpenAddItemsModal()
    {
        showAddItemsModal = true;
    }

    private void CloseAddItemsModal()
    {
        showAddItemsModal = false;
    }

    private async Task AddItemToCategory(int itemId)
    {
        var response = await Http.PostAsJsonAsync($"api/category/{categoryId}/items/{itemId}", new { });

        if (response.IsSuccessStatusCode)
        {
            await LoadCategory();
            await LoadAllItems();
        }
    }

    private async Task RemoveItemFromCategory(int itemId)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Remove this item from the category?");
        if (!confirm) return;

        var response = await Http.DeleteAsync($"api/category/{categoryId}/items/{itemId}");

        if (response.IsSuccessStatusCode)
        {
            await LoadCategory();
        }
    }
}